<div class = "container">
<%= form_for([@student, @log], html: {:class => "form-horizontal"}) do |f| %>
  <% if @log.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@log.errors.count, "error") %> prohibited this log from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :teacher_id, value: @student.teacher_id %>
  </div>
  <div class="field">
    <%= f.hidden_field :student_id, value: @student.id %>
  </div>
  <div class="form-group">
    <%= f.label :comment, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :comment, :class => "form-control", :rows => "10" %>
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= f.submit "Update Log", :class => "btn btn-default btn-block" %>
    </div>
    
<% end %>

