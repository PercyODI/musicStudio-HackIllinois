<div class = "container">
  <div class = "jumbotron text-center">
    <h2><p id="notice"><%= notice %></p></h2>
    <h1>Welcome <%= @teacher.name %>!</h1>
    <h3>Working out of <%= @teacher.location %></h3>
  </div>
</div>

<div class = "container text-center">
  <div class = "row">
    <div class = "col-sm-12">
      <h2>Now Showing <%= pluralize(@teacher.students.count, "Student") %></h2>
    </div>
  </div>
  
  <div class = "row">
    <% @students.each do |student| %>
    <div class = "col-sm-4">
    
      <%= link_to(teacher_student_path(@teacher, student), :class => "btn btn-default btn-lg active btn-block voffset3") do %>
         <h2><%= student.name %></h2>
      <% end %>
        
    </div>
    <% end %>
  </div>
  
  <div class = "row">
    <div class = "col-sm-4">
      <%= link_to("Add Student", new_teacher_student_path(@teacher), :class => "btn btn-success btn-lg active btn-block voffset3") %>
    </div>
    <div class = "col-sm-4">
      <%= link_to('Edit Teacher', edit_teacher_path(@teacher), :class => "btn btn-warning btn-lg active btn-block voffset3") %>
    </div>
    <div class = "col-sm-4">
      <%= link_to('Back to Teacher List', teachers_path, :class => "btn btn-primary btn-lg active btn-block voffset3") %>
    </div>
  </div>
</div>